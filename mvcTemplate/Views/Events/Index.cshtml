@model IEnumerable<mvc.Models.Event>

<h1>Evènements</h1>
<a asp-action="Create" class="btn btn-primary">Créer un nouvel évènement</a>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Lieux</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
