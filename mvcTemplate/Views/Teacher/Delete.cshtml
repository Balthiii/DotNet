@model mvc.Models.Teacher

<h2>Supprimer un enseignant</h2>

<h3>Voulez vous supprimer cet enseignant ?</h3>

<div>
    <strong>@Model.Firstname @Model.Lastname</strong>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a href="@Url.Action("Index", "Teacher")" class="btn btn-secondary">Annuler</a>
</form>
