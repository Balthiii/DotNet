@model IEnumerable<mvc.Models.Teacher>

<h2>Teachers</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Firstname</td>
                <td>@teacher.Lastname</td>
                <td>
                    <a href="@Url.Action("ShowDetails", "Teacher", new { id = teacher.Id })">Details</a> |
                    <a href="@Url.Action("Update", "Teacher", new { id = teacher.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Teacher", new { id = teacher.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
