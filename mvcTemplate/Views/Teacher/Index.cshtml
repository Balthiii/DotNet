@model IEnumerable<mvc.Models.Teacher>

<h2>Enseignants</h2>

<div class="mb-3">
    <a class="btn btn-primary" href="@Url.Action("Add", "Teacher")">Ajouter un enseignant</a>
</div>

<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>Prénom</th>
            <th>Nom de famille</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Firstname</td>
                <td>@teacher.Lastname</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("ShowDetails", "Teacher", new { id = teacher.Id })"
                        title="Voir les détails">
                        <i class="bi bi-eye"></i> Détails
                    </a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Update", "Teacher", new { id = teacher.Id })"
                        title="Modifier">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Teacher", new { id = teacher.Id })"
                        title="Supprimer">
                        <i class="bi bi-trash"></i> Supprimer
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
